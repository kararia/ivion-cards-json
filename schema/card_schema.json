{
    "$id": "https://github.com/kararia/ivion-cards-json/blob/master/schema/card_schema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "oneOf": [
        {
            "properties": {
                "type_code": {
                    "const": "skill"
                }
            },
            "required": [
                "action_cost",
                "power_cost",
                "subtype"
            ]
        },
        {
            "properties": {
                "type_code": {
                    "const": "feat"
                }
            },
            "required": [
                "feat"
            ]
        },
        {
            "properties": {
                "type_code": {
                    "const": "relic"
                }
            },
            "required": [
                "relic"
            ]
        },
        {
            "properties": {
                "type_code": {
                    "const": "relic-skill"
                }
            },
            "required": [
                "feat",
                "action_cost",
                "power_cost"
            ]
        },
        {
            "properties": {
                "type_code": {
                    "const": "ultimate"
                }
            },
            "required": [
                "health_points"
            ]
        }
    ],
    "properties": {
        "action_cost": {
            "oneOf": [
                {
                    "type": "integer"
                },
                {
                    "type": "null"
                }
            ]
        },
        "code": {
            "pattern": "^[0-9]{5}$",
            "type": "string"
        },
        "deck_limit": {
            "oneOf": [
                {
                    "minimum": 0,
                    "type": "integer"
                },
                {
                    "type": "null"
                }
            ]
        },
        "disarm": {
            "oneOf": [
                {
                    "default": false,
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        },
        "faction_code": {
            "minLength": 1,
            "type": "string"
        },
        "feat": {
            "oneOf": [
                {
                    "default": false,
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        },
        "flavor": {
            "minLength": 1,
            "type": "string"
        },
        "health_points": {
            "oneOf": [
                {
                    "minimum": 0,
                    "type": "integer"
                },
                {
                    "type": "null"
                }
            ]
        },
        "heroic": {
            "oneOf": [
                {
                    "default": false,
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        },
        "illustrator": {
            "pattern": ".+",
            "type": "string"
        },
        "keywords": {
            "minLength": 1,
            "type": "string"
        },
        "pack_code": {
            "maxLength": 5,
            "minLength": 2,
            "type": "string"
        },
        "position": {
            "minimum": 1,
            "type": "integer"
        },
        "power_cost": {
            "oneOf": [
                {
                    "type": "integer"
                },
                {
                    "type": "null"
                }
            ]
        },
        "quantity": {
            "minimum": 1,
            "type": "integer"
        },
        "range": {
            "oneOf": [
                {
                    "minimum": 0,
                    "type": "integer"
                },
                {
                    "type": "null"
                }
            ]
        },
        "relic": {
            "oneOf": [
                {
                    "default": false,
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        },
        "side_code": {
            "minLength": 1,
            "type": "string"
        },
        "silence": {
            "oneOf": [
                {
                    "default": false,
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        },
        "slow": {
            "oneOf": [
                {
                    "default": false,
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        },
        "text": {
            "minLength": 1,
            "type": "string"
        },
        "title": {
            "minLength": 1,
            "type": "string"
        },
        "type_code": {
            "minLength": 1,
            "type": "string"
        }
    },
    "required": [
        "code",
        "faction_code",
        "pack_code",
        "position",
        "title",
        "type_code"
    ],
    "type": "object"
}
